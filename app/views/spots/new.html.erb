<%= simple_form_for @spot, html: { class: "col-sm-6 offset-sm-3" } do |f| %>
  <%= f.input :name %>
  <%= f.input :location %>
  <%= f.input :description %>
  <%= f.input :security, collection: %w[None Calm Low Medium High Bust] %>
  <%= f.input :stairset %>
  <%= f.input :ledge %>
  <%= f.input :cover %>
  <%= f.input :flatground %>
  <%= f.input :photo, input_html: { multiple: true }, as: :file %>
  <%= f.button :submit %>
<% end %>
