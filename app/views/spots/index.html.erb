<style>
  .filter-options {
    margin: 0;
  }
</style>

<div>
  <div id="map"
    style="width: 375px; height: 410px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    data-center=<%= @map_center ? @map_center : ""  %> >
  </div>

  <%= simple_form_for :filters, url: spots_path, method: :get do |f| %>

  <div class="filter-container">


    <div class="filter-options">
      <%= f.input :stairset, as: :boolean, input_html: { style: "display: none", checked: params.dig(:filters, :stairset) == "1" }, label_html: { class: "btn btn-primary btn-check filter-options" } %> 

      <%= f.input :ledge, as: :boolean, input_html: { style: "display: none", checked: params.dig(:filters, :ledge) == "1" }, label_html: { class: "btn btn-primary btn-check filter-options" } %>

      <%= f.input :cover, as: :boolean, input_html: { style: "display: none", checked: params.dig(:filters, :cover) == "1" }, label_html: { class: "btn btn-primary btn-check filter-options" } %>

      <%= f.input :flat, as: :boolean, input_html: { style: "display: none", checked: params.dig(:filters, :flatground) == "1" }, label_html: { class: "btn btn-primary btn-check filter-options" } %>

      <%= f.input :center, as: :hidden, input_html: { id: "hidden-center", value: [] } %>
    </div>

    <%# TRY THIS:
    input_html: { style: "display: none"}, label_html: { class: "btn btn-primary"} %>


    <%= f.submit "Filter", class: "btn-filter" %>
    </div>
  <% end %>
</div>

